# n8n CRM Lead Automation - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# GOOGLE SERVICES
# ============================================================================
# Google Form ID (from form URL: forms.google.com/.../{FORM_ID}/edit)
GOOGLE_FORM_ID=your_google_form_id_here

# Google Sheet ID (from sheet URL: docs.google.com/spreadsheets/d/{SHEET_ID}/edit)
GOOGLE_SHEET_ID=your_google_sheet_id_here

# ============================================================================
# COMMUNICATION CHANNELS
# ============================================================================
# Slack Channel ID (right-click channel → View channel details → copy ID)
SLACK_CHANNEL_ID=C0123456789

# Email addresses
SENDER_EMAIL=automation@yourcompany.com
MANAGER_EMAIL=manager@yourcompany.com

# ============================================================================
# PROJECT MANAGEMENT
# ============================================================================
# Asana Workspace ID (from workspace settings or API)
ASANA_WORKSPACE_ID=1234567890123456

# Asana Assignee ID (user GID for default task assignee)
ASANA_ASSIGNEE_ID=9876543210987654

# ============================================================================
# CRM CONFIGURATION (Future Enhancement)
# ============================================================================
# Supported values: hubspot, pipedrive, zoho
# CRM_TYPE=hubspot

# ============================================================================
# SECURITY & PRIVACY
# ============================================================================
# Mask sensitive data in notifications (true/false)
# MASK_PHONE_IN_SLACK=false
# REDACT_EMAIL_IN_LOGS=false

# Data retention period in days
# DATA_RETENTION_DAYS=365
